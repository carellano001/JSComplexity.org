.source
  max-width 960px
  clearfix()
  .code
    display block
    width 97%
    height 300px
    margin 12px 0
    padding 1.5%
    border 1px solid #999
    monofont()
    line-height 1.5
    font-size 1.2em
    color #666
    &:focus
      outline none
  legend
    invisible()
  .option
    vertical-align top
  .label
    line-height 1.3
  .button
    float right
    margin 12px 0
    padding 6px 16px
    border 1px solid #666
    border-radius(3px)
    background-color green
    font-size 1.4em
    vertical-gradient(green-bright, green)
    color context-light
    text-shadow context-dark -1px -1px
    box-shadow(inset 0 0 1px 0 context-dark)
    cursor pointer
    &:active
      vertical-gradient(green, green-bright)
