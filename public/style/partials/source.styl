.source
  clearfix()
  .heading
    invisible()
  .code
    display block
    max-width 1140px
    width 97%
    height 300px
    margin 12px 0
    padding 1.5%
    border 1px solid #999
    monofont()
    font-size 1em
    color #666
    &:focus
      outline none
  legend
    invisible()
  .option
    vertical-align middle
  .button
    float right
    margin 12px 0
    padding 6px 16px
    border 1px solid #666
    border-radius(3px)
    background-color green
    vertical-gradient(green-bright, green)
    color white
    text-shadow context-dark -1px -1px
    box-shadow(inset 0 0 1px 0 context-dark)
    cursor pointer
    &:active
      vertical-gradient(green, green-bright)
